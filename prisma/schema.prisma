generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  name           String?
  password       String
  role           Role              @default(USER)
  verified       Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  transcriptions TranscriptChunk[]
  auditLogs      AuditLog[]
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@unique([email, token])
}

model TranscriptChunk {
  id         String   @id @default(cuid())
  meetingId  String   @map("meeting_id")
  userId     String   @map("user_id")
  t0         Float
  t1         Float
  text       String
  speakerId  String?  @map("speaker_id")
  confidence Float?
  lang       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@map("transcript_chunks")
}

enum Role {
  USER
  ADMIN
}

model Meeting {
  id         String    @id @default(cuid())
  orgId      String    @map("org_id")
  title      String
  startedAt  DateTime  @map("started_at")
  endedAt    DateTime? @map("ended_at")
  platform   String
  attendees  String[]
  status     String

  decisions           Decision[]
  whiteboardSnapshots WhiteboardSnapshot[]

  @@map("meetings")
}

model Decision {
  id               String    @id @default(cuid())
  meetingId        String    @map("meeting_id")
  statement        String
  rationale        String
  evidenceSpanIds  String[]  @map("evidence_span_ids")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  meeting          Meeting   @relation(fields: [meetingId], references: [id])

  @@index([meetingId, createdAt])
  @@map("decisions")
}

model WhiteboardSnapshot {
  id          String    @id @default(cuid())
  meetingId   String    @map("meeting_id")
  frameUrl    String    @map("frame_url")
  ocr         Json?     // OCR results as JSON
  version     Int       @default(1)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  meeting     Meeting   @relation(fields: [meetingId], references: [id])

  @@index([meetingId, createdAt])
  @@index([meetingId, version])
  @@map("whiteboard_snapshots")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String?
  entityId   String?
  metadata   Json?
  ip         String?
  userAgent  String?
  hash       String?
  prevHash   String?
  createdAt  DateTime @default(now())

  user       User?    @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([entityType, entityId])
  @@map("audit_logs")
}
